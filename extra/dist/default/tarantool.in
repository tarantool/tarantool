    username   = "@TARANTOOL_USER@",
    language   = "@TARANTOOL_LANGUAGE@",
}

-- instances.available - all available instances
-- instances.enabled - instances to autostart by sysvinit
instance_dir = "@TARANTOOL_INSTANCEDIR@"
