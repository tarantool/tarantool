            "inherits": "base",
            "configurePreset": "clang_debug_asan",
            "configuration": "Debug"
        },
        {
            "name": "clang_release_asan",
            "displayName": "Clang Release ASAN",
            "inherits": "base",
            "configurePreset": "clang_release_asan",
            "configuration": "RelWithDebInfo"
        }
    ],
