for i = 1, 10 do
    table.insert(fibers,
        fiber.create(function(no)
            fiber.self():name('receiver')
            while true do
                local r = chs[no]:get(math.random() * .001)
                if r ~= nil and r[1] == no then
                    test_res[no] = true
                elseif r ~= nil then
                    break
                end
                fiber.sleep(0.001 * math.random())
                count = count + 1
            end
            test_res[no] = false
        end, i)
    )
end;
