fibers = {}

for i = 1, 10 do
    table.insert(fibers,
        fiber.create(function(no)
            fiber.self():name('pusher')
            while true do
                chs[no]:put({no})
                fiber.sleep(0.001 * math.random())
            end
        end, i)
    )
end;
---
