...
function async_replace(space, tuple, wait_cond)
    local c = fiber.channel(1)
    fiber.create(function()
        box.begin()
        space:replace(tuple)
        test_run:wait_cond(wait_cond)
        local status = pcall(box.commit)
        c:put(status)
    end)
    return c
end;
